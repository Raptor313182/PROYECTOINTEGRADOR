@model IEnumerable<ProyectoIntegrador.Models.Dispositivo>
@{
    ViewData["Title"] = "Men√∫";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link rel="stylesheet" href="~/css/index.css">
    <title>Index</title>
</head>
<body>

<div class="containers font">
    <header  class="header " >
        <h4>GESTI√ìN DE DISPOSITIVOS <i class="bi bi-gear-fill"></i></h4>
    </header>
    <div class="main">
            <div class="img">
                    <img src="https://image.flaticon.com/icons/png/512/2237/2237440.png" class="brand_logo" alt="Logo">
            </div>
        <h4>Tabla con Informaci√≥n ü°£</h4>
        <br>
        <br>
        <br>
        <div class="middle">
        <table class="table table-striped table-">
            <thead class="table-dark ">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.IdDispositivo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Ubicacion)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th class="text-center"><a class="btn btn-light" href="http://localhost:5000/Usuario">Usuario</a></th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model) {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.IdDispositivo)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Ubicacion)
                    </td >
                    <td scope="row" > 
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdDispositivo" class="text-dark"><i class="bi bi-pen-fill" ></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdDispositivo" class="text-danger"><i class="bi bi-trash-fill ml-3"> </i></a>
                    </td>
                </tr>
                     
                }
            </tbody>
        </table>
        </div>
    </div>
    <aside class="sidebar text-center">
        <h4 style="padding: 10px;">Men√∫</h4>
        <tr>
            <th>
                <a asp-action="Create" class="btn btn-dark"><i class="bi bi-person-plus-fill bi-lg"></i> Nuevo Dispositivo</a>
            </th>
        </tr>
        <hr>
        <h5 style="text-align: left; padding: 10px 0px 0px 10px;">Tip:</h5>
        <p style="text-align: left; padding: 0px 0px 0px 10px;;">Nuevo Dispositivo: Nueva puerta de la casa de seguiridad.</p>
    </aside>
</div>

</body>
</html>