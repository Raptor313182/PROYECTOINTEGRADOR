@model IEnumerable<ProyectoIntegrador.Models.Usuario>
@{
    ViewData["Title"] = "Men√∫";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
     <link rel="stylesheet" href="~/css/index.css">
    <title>Index</title>
</head>
<body>

<div class="containers font">
    <header  class="header " >
        <h4>GESTI√ìN DE USUARIOS <i class="bi bi-gear-fill"></i></h4>
        @* <img class="brand_logo"src="https://image.flaticon.com/icons/png/512/1827/1827933.png" alt=""> *@
    </header>
    <div class="main">
            <div class="img">
                    <img src="https://image.flaticon.com/icons/png/512/1077/1077114.png" class="brand_logo" alt="Logo">
            </div>
        <h4>Tabla con Informaci√≥n ü°£</h4>
        <br>
        <div class="middle">
            @using(Html.BeginForm("Index","Usuario", FormMethod.Get))
                {   
                <div class="input-group mb-3" >        
                     <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
                     @Html.TextBox("buscar")<input type="submit" value="Buscar" class="btn btn-secondary" autocomplete="off"/>
                </div> 
                 }
        <table class="table table-striped table-">
            <thead class="table-dark ">
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="text-center">Edici√≥n</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr colspan="1" style="color: red;">
                        <td>
                            No hay una coinciendencia
                        </td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model) {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td >
                    <td scope="row" > 
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="text-dark"><i class="bi bi-pen-fill" ></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="text-danger"><i class="bi bi-trash-fill ml-3"> </i></a>
                        <a asp-action="Details" asp-route-id="@item.IdUsuario" ><i class="bi bi-exclamation-square-fill ml-3"></i></a>
                    </td>
                </tr>
                    } 
                }
            </tbody>
        </table>
        </div>
    </div>
    <aside class="sidebar text-center">
        <h4 style="padding: 10px;">Men√∫</h4>
        <tr>
            <th>
                <a asp-action="Create" class="btn btn-dark"><i class="bi bi-person-plus-fill bi-lg"></i> Nuevo Usuario</a>
            </th>
        </tr>
        <hr>
        <h5 style="text-align: left; padding: 10px 0px 0px 10px;">Tip:</h5>
        <p style="text-align: left; padding: 0px 0px 0px 10px;;">Nuevo Usuario: Nuevo Empleado de la casa de seguiridad.</p>
    </aside>
</div>

</body>
</html>