            <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 form-group">
            <input asp-for="Direccion" class="form-control" id="floatingInput" placeholder="Direccion"/>
            <label asp-for="Direccion" class="control-label"></label>
            <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 form-group">
            <input asp-for="Telefono" class="form-control" id="floatingInput" placeholder="Telefono"/>
            <label asp-for="Telefono" class="control-label"></label>
            <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 form-group">
            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="Email"/>
            <label asp-for="Email" class="control-label"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
               <select name="IdDispositivo" class="control-label" asp-items="ViewBag.ListaDispositivos"></select>               
