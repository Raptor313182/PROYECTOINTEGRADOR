@model ProyectoIntegrador.Models.Usuario
@{
    ViewData["Title"] = "Crear";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

