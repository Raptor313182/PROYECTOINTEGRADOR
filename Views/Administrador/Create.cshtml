@model ProyectoIntegrador.Models.Administrador
@{
    ViewData["Title"] = "Crear";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/edit.css">
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<div class="containers">
   
    <div class="main">
            <header class="header">
                <h4>EDICIÓN DE ADMINISTRADOR <i class="bi bi-gear-fill"></i></h4>
            </header>
            <div class="row">
                <div class="col-md-4">
                    <div class="editt">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3 form-group">
                            <input asp-for="Nombre" class="form-control" id="floatingInput" placeholder="Nombre"/>
                            <label asp-for="Nombre" class="control-label"></label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 form-group">
                            <input asp-for="Apellido" class="form-control" id="floatingInput" placeholder="Apellidoa"/>
                            <label asp-for="Apellido" class="control-label"></label>
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 form-group">
                            <input asp-for="Direccion" class="form-control" id="floatingInput" placeholder="Direccion"/>
                            <label asp-for="Direccion" class="control-label"></label>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 form-group">
                            <input asp-for="Telefono" class="form-control" id="floatingInput" placeholder="Telefono"/>
                            <label asp-for="Telefono" class="control-label"></label>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3 form-group">
                            <input asp-for="Email" class="form-control" id="floatingInput" placeholder="Email"/>
                            <label asp-for="Email" class="control-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group" >
                                <label class="control-label"></label>
                                <select name="IdRol" class="control-label" asp-items="ViewBag.ListaRoles"></select>             
                            </div>
                            <div>
                                <input type="submit" onclick="Alert()" value="Guardar" class="btn btn-primary" style="margin: 0 20px 0px 0px; margin:5px;"> 
                                <a asp-action="Index"class="btn btn-secondary" ><i class="bi bi-backspace"></i> Volver</a>
                            </div>
                        </form>
                 </div>    
                </div>
            </div>
    </div>
   <aside class="sidebar text">
        <h4>Información sobre Administrador</h4>
        <br>
        <br>
        <p><i class="bi bi-asterisk"></i></i>  Nombre: Máximo 20 Caracteres.</p>
        <p><i class="bi bi-asterisk"></i>  Apellido: Máximo 20 Caracteres. </p>
        <p><i class="bi bi-map-fill"></i>  Direccion: Máximo 50 Caracteres. </p>
        <p><i class="bi bi-telephone-fill"></i>  Teléfono: Máximo 20 Caracteres. </p>
        <p><i class="bi bi-envelope-fill"></i>  Email: Máximo 50 Caracteres. </p>
    </aside>

</body>
</html>