@using Microsoft.AspNetCore.Http;
@{
    if (Context.Session.GetString("usuario") == null)
    {
        Context.Response.Redirect("/Login");
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoIntegrador</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-5 ">
            <div class="container" >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto Integrador</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" 
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        
                            <li>
                                <!-- Large button groups (default and split) -->
                                <div class="btn-group">
                                    <button class="btn  btn-mg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Usuario
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
                                            </li>
                                            <li class="nav-item">
                                                                                             @*Ejecutar el controlador Dispositivo con el metodo Index*@ 
                                                 <a class="nav-link text-dark" asp-area="" asp-controller="Dispositivo" asp-action="Index">Dispositivo</a>
                                            </li>
                                        </ul>
                                </div>
                            </li>
                            <li>
                                <!-- Large button groups (default and split) -->
                                <div class="btn-group">
                                    <button class="btn  btn-mg dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Administrador
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Administrador" asp-action="Index">Administrador</a>
                                            </li>
                                            <li class="nav-item">
                                                                                             @*Ejecutar el controlador Rol con el metodo Index*@ 
                                                 <a class="nav-link text-dark" asp-area="" asp-controller="Rol" asp-action="Index">Rol</a>
                                            </li>
                                        </ul>
                                </div>
                            </li>
                             <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Historial" asp-action="Index">Historial</a></li>
                    </ul>
                   
                    <ul class="nav justify-content-end">
                            <li class="nav-item">
                                   <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Cerrar Sesión</a>
                            </li>     
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #EEEEEE;">
        <div class="container">
            <STYLE>A {text-decoration: none;} </STYLE>
            &copy; 2021 - ProyectoIntegrador - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>
